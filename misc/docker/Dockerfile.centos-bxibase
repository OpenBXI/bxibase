FROM local/centos-jupyter-c:latest
MAINTAINER "Pierre Vign√©ras" <pierre.vigneras@atos.net>

ADD RPMS /rpms

RUN     echo $'[local] \n\
name=Local \n\
baseurl=file:///rpms/x86_64 \n\
enabled=1 \n\
gpgcheck=0 \n\
protect=1 \n'\
> /etc/yum.repos.d/local.repo


RUN yum -y install bxibase bxibase-devel bxibase-doc bxibase-tools bxibase-tests

RUN sed -i "s/'-std=c11'/'-std=c11', '-lbxibase'/g" /usr/lib/python3.4/site-packages/jupyter_c_kernel/kernel.py
